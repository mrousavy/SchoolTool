<?xml version="1.0" encoding="UTF-8"?>

<resources>
  <!--A single normal lesson for the Timegrid-->
  <style name="Lesson" parent="CardView">
    <item name="cardBackgroundColor">@color/orange_500</item>
    <item name="cardCornerRadius">18dp</item>
  </style>

  <!--A single newly added lesson for the Timegrid-->
  <style name="LessonNew" parent="CardView">
    <item name="cardBackgroundColor">@color/green_500</item>
    <item name="cardCornerRadius">18dp</item>
  </style>

  <!--A single cancelled lesson for the Timegrid-->
  <style name="LessonCancellation" parent="CardView">
    <item name="cardBackgroundColor">@color/grey_500</item>
    <item name="cardCornerRadius">18dp</item>
  </style>

  
  <!-- Loading/Login Screen Theme -->
  <style name="Loading" parent="style/Theme.AppCompat.NoActionBar">
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:colorPrimary">@color/green_800</item>
    <item name="android:windowBackground">@color/green_500</item>

    <!-- TODO: Not working, set to orange to see changes -->
    <item name="android:colorAccent">@color/orange_500</item>
    <item name="android:statusBarColor">@color/orange_500</item>
    <item name="android:colorPrimaryDark">@color/orange_500</item>
    <!-- /TODO -->

    <!-- TextInput Colors -->
    <item name="colorControlNormal">@color/green_700</item>
    <item name="colorControlActivated">@color/green_800</item>
    <item name="colorControlHighlight">@color/green_800</item>
  </style>

  <!-- TODO: Default Design -->
  <style name="SchoolToolDefault" parent="style/Theme.AppCompat.Light">
    <item name="colorPrimary">@color/green_500</item>
    <item name="android:textColorPrimary">@color/white</item>
  </style>
  <!-- /TODO -->  
  
  <style name="Wecker" parent="@style/Theme.AppCompat">
    <item name="android:colorPrimary">@color/orange_400</item>
    <item name="android:colorAccent">@color/orange_500</item>
    <item name="android:statusBarColor">@color/orange_600</item>
  </style>
  
  <style name="WeckerSettings" parent="@style/Theme.AppCompat">
    <item name="android:colorPrimary">@color/orange_400</item>
    <item name="android:colorAccent">@color/orange_500</item>
    <item name="android:statusBarColor">@color/orange_600</item>
  </style>
</resources>