<?xml version="1.0" encoding="UTF-8"?>

<resources>
  <style name="UntisMaterialTheme" parent="android:Theme.Material.Light">
    <!--Primary Color = Title/Action Bar, ...-->
    <item name="android:colorPrimary">@color/orange_400</item>
    <!--Accent Color = Selected Checkboxes, Radiobuttons, ...-->
    <item name="android:colorAccent">@color/orange_500</item>

    <!--<item name="android:statusBarColor">@color/orange_600</item>-->
  </style>

  <!-- Loading/Login Screen Theme -->
  <style name="Loading" parent="@style/Theme.AppCompat.NoActionBar">
    <item name="android:colorPrimary">@color/green_800</item>
    <item name="android:windowBackground">@color/green_500</item>

    <item name="android:colorAccent">@color/orange_500</item>
    <item name="android:statusBarColor">@color/orange_500</item>
    <item name="android:colorPrimaryDark">@color/orange_500</item><!-- TODO: Not working, set to orange to see changes -->

    <!-- TODO: Maybe Navigation Bar Color to Dark Green-->
    
    <!-- TextInput Colors -->
    <item name="colorControlNormal">@color/white</item>
    <item name="colorControlActivated">@color/green_700</item>
    <item name="colorControlHighlight">@color/green_800</item>
    
  </style>

  <style name="SchoolToolDefaultActionBar" parent="android:Widget.Holo.Light.ActionBar">
    <item name="android:titleTextStyle">@color/white</item>
    <item name="background">@color/green_500</item>
  </style>
  
  <!-- TODO: Default Design -->
  <style name="SchoolToolDefault" parent="@style/Theme.AppCompat.Light">
    <item name="android:actionBarStyle">@style/SchoolToolDefaultActionBar</item>
    <item name="android:background">@color/white</item>
    <item name="android:textColorPrimary">@color/white</item>
  </style>
  <style name="Wecker" parent="@style/Theme.AppCompat">
    <item name="android:colorPrimary">@color/orange_400</item>
    <item name="android:colorAccent">@color/orange_500</item>
    <item name="android:statusBarColor">@color/orange_600</item>
  </style>
  <style name="WeckerSettings" parent="@style/Theme.AppCompat">
    <item name="android:colorPrimary">@color/orange_400</item>
    <item name="android:colorAccent">@color/orange_500</item>
    <item name="android:statusBarColor">@color/orange_600</item>
  </style>
</resources>